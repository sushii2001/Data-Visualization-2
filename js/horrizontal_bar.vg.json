{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "config": {
        "background": "#302c54",
        "axis": {
          "labelColor": "#ffffff",
          "titleColor": "#ffffff",
          "grid": false,
          "domain": false
        },
        "legend": {
          "labelColor": "#ffffff",
          "titleColor": "#ffffff",
          "gradientDirection": "horizontal",
          "titleAnchor":"end",
          "orient": "top",
          "legendX": 10,
          "legendY": 15,
          "gradientLength": 250,
          "labelFontSize":9,
          "titleFontSize":10,
          "titleLimit":1000
        },
        "view": {
          "fill": "#302c54",
          "stroke": "transparent"
        },
        "style":{
          "label":{"align": "center", "baseline":"line-bottom", "color":"white"}
        } 
    },
    "width": 260,
    "height": 125,
    "padding": 15,
    
    "data": {
        "url": "https://raw.githubusercontent.com/sushii2001/Data-Visualization-2/master/sources/ranking.csv"
      },
    "encoding": {
      "y": {"field": "Social Media", 
            "type": "nominal", 
            "sort": {"op": "max","field": "Rank"} , 
            "title": null,
            "axis": {
              "labelFontSize":10
            }},
      "x": {"field": "Total Instagram users (MM)", 
            "type": "quantitative", 
            "title": null, 
            "axis": {
              "labelFontSize":10
            }},
      "fillOpacity": {
        "condition": {"param": "select", "value": 1},
        "value": 0.3
      },
      "tooltip": [ 
            {"field": "Social Media", "type": "nominal"}, 
            {"field": "Total Instagram users (MM)", "type": "quantitative"},
            {"field": "Rank", "type": "quantitative"}
      ]
    },
    "layer": [{
      "mark": {
        "type": "bar",
        "stroke": "black",
        "cursor": "pointer"
      }, 
      "params": [{
          "name": "highlight",
          "select": {"type": "point", "on": "mouseover"}
        },
        {"name": "select", "select": "point"}
      ],
      "encoding": {
        "color": {
          "field": "Total Instagram users (MM)",
          "type": "quantitative",
          "title": "Total user count (MM)",
          "scale": { 
            "type": "threshold", 
            "domain": [300, 600, 900, 1200, 1500], 
            "range": ["#ffefcf","#ffdf9e", "#e56969", "#c1558b", "#a33b92", "#8a49a1"] 
          }
        }
      }
    },
     {
      "mark": {
        "type": "text",
        "align": "right",
        "xOffset": -4,
        "aria": false,
        "fontSize":10
      },
      "encoding": {
        "text": {"field": "Total Instagram users (MM)", "type": "quantitative"},
        "color": {
          "condition": {
            "test": {"field": "Total Instagram users (MM)", "gt": 10},
            "value": "white"
          },
          "value": "white"
        }
      }
    }]
  }
  